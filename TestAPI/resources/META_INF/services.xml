<service name="HelloPerson" scope="application">
    <description>
         POJO Service
    </description>
    <messageReceivers>
        <messageReceiver 
            mep="http://www.w3.org/ns/wsdl/in-only"
    class="org.apache.axis2.rpc.receivers.RPCInOnlyMessageReceiver"/>
        <messageReceiver
            mep="http://www.w3.org/ns/wsdl/in-out"
    class="org.apache.axis2.rpc.receivers.RPCMessageReceiver"/>
        <messageReceiver 
            mep="http://www.w3.org/ns/wsdl/*"
    class="org.apache.axis2.rpc.receivers.RPCInOnlyMessageReceiver"/>
    </messageReceivers>
    <parameter name="ServiceClass">
        com.pojo.service.HelloPerson
    </parameter>
</service>